@model User
@{
    ViewData["Title"] = "Авторизация и регистрация";
}

<div class="text-center">
    <h1 class="display-4">Авторизация и регистрация</h1>
</div>
<form asp-action="Loging">
    <div class="form-group">
        <label asp-for="Login" class="control-label"></label>
        <input asp-for="Login" class="form-control" />
        <label asp-for="Password" class="control-label"></label>
        <input asp-for="Password" type="password" class="form-control" />

    </div>
    <div class="form-group">
        <input type="submit" value="Login" class="btn btn-primary" />
        <input type="submit" asp-action="Create" value="Create" class="btn btn-primary" />
    </div>
</form>