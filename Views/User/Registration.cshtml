@model User
@{
    ViewData["Title"] = "Регистрация";
}
<div class="text-center">
    <h1 class="display-4">Регистрация</h1>
</div>
<form asp-action="Loging">
    <div class="form-group">
        <label class="control-label">Логин</label>
        <input asp-for="Login" class="form-control" />
        <label class="control-label">Пароль</label>
        <input asp-for="Password" type="password" class="form-control" />
        <label class="control-label">Повторение пароля</label>
        <input asp-for="Password" type="password" class="form-control" />
    </div>
    <div class="form-group mt-4">
        <input type="submit" asp-action="Registration" value="Зарегистрироваться" class="btn btn-primary"/>
        <input type="submit" asp-action="Index" value="Перейти к авторизации" class="btn btn-primary" />
    </div>
</form>